<%= @contact.name %>
<%= @contact.email %>
<%= @contact.phone_number %>
<%= bootstrap_form_tag url: send_email_contact_path do |f| %>
    <%= f.hidden_field(:id, value: @contact.id) %>
    <%= f.text_field :subject , label: t('subject')  %>
    <%= f.text_area(:message, size: '24x6', :required => true, :maxlength => 300) %>
    <%= f.submit  t('submit') %>
<% end %>
