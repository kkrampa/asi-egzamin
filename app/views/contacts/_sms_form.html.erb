<%= @contact.name %>
<%= @contact.email %>
<%= @contact.phone_number %>
<%= form_for(:contact, url: sms_sender_contact_path) do |f| %>
    <%= hidden_field_tag(:id, @contact.id) %>
    <%= text_area(:message, "", size: '24x6', :required => true, :maxlength => 300) %>
    <%= f.submit t('submit')%>
<% end %>
