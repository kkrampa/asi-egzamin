<h1>Listing Contacts</h1>
<p><%= link_to 'Import contacts from Google API', import_contacts_path, class: 'btn btn-default' %></p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone_number %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td>
            <% if @sms_config and contact.phone_number %>
                <%= link_to 'Send SMS', send_sms_contact_path(contact) %>
            <% end %>
        </td>

        <td>
          <% if contact.email %>
            <%= link_to 'Send email', create_email_contact_path(contact) %>
          <% end %>
        </td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path, class: 'btn btn-default'%>
