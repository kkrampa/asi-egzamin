<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "asi-egzamin", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('home'), root_path %></li>
        <li><%= link_to "FAQ", help_path %></li>
        <% if logged_in? %>
            <li><%= link_to t('users'), users_path %></li>
            <li><%= link_to t('contacts'), contacts_path %></li>
            <li><%= link_to t('setup_sms'), new_sms_config_path %></li>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('account') %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('profile'), current_user %></li>
              <li><%= link_to t('edit_profile'), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('log_out'), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('sign_in'), login_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t('lang') %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to_unless_current "English", locale: "en" %> </li>
            <li><%= link_to_unless_current "Polski", locale: "pl" %> </li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
