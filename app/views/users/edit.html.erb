<% provide(:title, t('edit_user')) %>
<h1><%= t('update_your_profile') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit t('save_changes'), class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target=_blank><%= t('change') %></a>
    </div>
  </div>
</div>
