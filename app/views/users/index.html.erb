<% provide(:title, t('users')) %>

<h1> <%= t('users') %> </h1>

<%= form_tag users_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag t('search'), :name => nil %>
  </p>
<% end %>
<%= form_tag users_path, :method => :get do %>
  <p>
    <%= link_to t('show_all'), users_path, class: "btn btn-lg btn-primary" %>
  </p>
<% end %>

<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>
