<% provide(:title, 'Users') %>

<h1>Users</h1>

<%= form_tag users_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<%= form_tag users_path, :method => :get do %>
  <p>
    <%= link_to "Show all", users_path, class: "btn btn-lg btn-primary" %>
  </p>
<% end %>

<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>
